<Window x:Class="SportStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.471,0.227">
        <Viewbox>
            <Image Source="/img/logo.png" Height="52" VerticalAlignment="Center" HorizontalAlignment="Center" Width="45" />
        </Viewbox>
        <Frame x:Name="FrameMain" NavigationUIVisibility="Hidden" Margin="0,-16,0,0" Grid.RowSpan="2" Navigated="FrameMain_Navigated" Grid.Column="1"  />
        <Grid.RowDefinitions>
            <RowDefinition Height="23*" ></RowDefinition>
            <RowDefinition Height="194*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"></ColumnDefinition>
            <ColumnDefinition Width="751*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
    </Grid>
</Window>
